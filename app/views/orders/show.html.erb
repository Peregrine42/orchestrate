<%= link_to "all orders", orders_path, class: "btn btn-info" %>
<h2>order for: <%= @order.name %></h2>
<div>
  <h3><%= @order.status %></h3>
  <h3>address:</h3>
  <p class="indent20">
    <%= @order.address_line_1 %><br/>
    <%= @order.address_line_2 %><br/>
    <%= @order.address_line_3 %>
    <%= @order.postcode %>
  </p>
</div>
<div>
  <%= link_to "edit order", edit_order_path(@order), class: "btn btn-info" %>
  <%= link_to "add product", new_order_line_path(@order), class: "btn btn-success" %>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>product name</th>
      <th>quantity</th>
    </tr>
  </thead>
  <tbody>
    <% @order.unarchived_lines.each do |line| %>
    <tr>
      <td><%= line.product.name %></td>
      <td><%= line.quantity %></td>
      <td><%= link_to "edit", edit_order_line_path(@order, line) %></td>
      <td>
        <form action="<%= order_line_path(@order, line) %>" method="post">
          <input type="hidden" name="_method" value="patch"/>
          <input type="hidden" name="line[archived]" value="true"/>
          <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>"/>
          <input type="submit" value="delete <%= line.name %>" class="btn btn-danger"/>
        </form>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
