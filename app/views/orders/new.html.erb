<%= link_to "back to orders", "/orders", class: "btn btn-info" %>
<h2>New Order</h2>
<%= simple_form_for @order do |f| %>
  <%= f.input :first_name, label: "first name" %>
  <%= f.input :last_name, label: "last name" %>
  <%= f.input :status, label: "status", collection: ["pending"], default: "pending" %>

  <fieldset class="form-group">
    <legend>address</legend>
    <div class="indent20">
      <%= f.input :address_line_1, label: "line 1" %>
      <%= f.input :address_line_2, label: "line 2" %>
      <%= f.input :address_line_3, label: "line 3" %>
      <%= f.input :postcode, label: "postcode" %>
    </div>
  </fieldset>
  <%= f.button :submit, value: "create order", class: "btn btn-primary" %>
<% end %>
