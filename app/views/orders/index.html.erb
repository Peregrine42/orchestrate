<table>
  <tr>
    <th>Name</th>
    <th>Status</th>
    <th>Address...</th>
    <th>Postcode</th>
  </tr>
  <% @orders.each do |order| %>
    <tr>
      <td><%= order.name %></td>
      <td><%= order.status %></td>
      <td><%= order.truncated_address %></td>
      <td><%= order.postcode %></td>
    </tr>
  <% end %>
</table>
