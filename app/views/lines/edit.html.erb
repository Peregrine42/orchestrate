<%= link_to "back to order", order_path(@order), class: "btn btn-info" %>
<br/>
<br/>
<%= simple_form_for [@order, @line] do |f| %>
  <%= f.input :product_id, label: "product", :collection => @line.possible_products + [@line.product], :as => :select, :include_blank => false %>
  <%= f.input :quantity, label: "quantity" %>
  <%= f.button :submit, value: "save", class: "btn btn-primary" %>
<% end %>
