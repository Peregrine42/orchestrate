<%= link_to "back to order", @order, class: "btn btn-info" %>
<h2>archived order lines</h2>
<table class="table table-striped table-hover table-bordered">
  <thead>
    <tr>
      <th class="col-md-6">product name</th>
      <th class="col-md-2">quantity</th>
      <th class="col-md-4" colspan="2">actions</th>
    </tr>
  </thead>
  <tbody>
    <% @lines.each do |line| %>
    <tr>
      <td><%= line.product.name %></td>
      <td><%= line.quantity %></td>
      <td>
        <form action="<%= order_line_path(@order, line) %>" method="post">
          <input type="hidden" name="_method" value="patch"/>
          <input type="hidden" name="line[archived]" value="false"/>
          <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>"/>
          <input type="submit" value="restore <%= line.name %>" class="btn btn-primary"/>
        </form>
      </td>
      <td>
        <form action="<%= order_line_path(@order, line) %>" method="post">
          <input type="hidden" name="_method" value="delete"/>
          <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>"/>
          <input type="submit" value="permanently delete <%= line.name %>" class="btn btn-danger"/>
        </form>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>